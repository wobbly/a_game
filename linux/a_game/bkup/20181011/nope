#include <string>
#include <sstream>
#include "quit.h"

using namespace std;

void intro(){

	system ("clear");
	cout << "Welcome to A Game!\n";
	cout << "Would you like to play A Game?  ";

	string answer = "";

	getline (cin, answer);

	if (answer != "no" && answer != "n"){
		system ("clear");
		cout << "That doesn't seem like a no!\n";
		system ("clear");
		sleep (2000);
		cout << "Loading the first room.  ";
		system ("clear");
		sleep (2000);
		system ("clear");
		cout << "Loading the first room. . . ";
		system ("clear");
		return;
	}
	else
		quit();
}
